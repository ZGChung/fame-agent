{
  "version": "1.2",
  "description": "Jayson's Content Pipeline - 创意到发布自动化系统",
  "input_folder": "input",
  "processing_folder": "processing",
  "output_folder": "output",
  "queue_folder": "queue",
  "platforms": [
    {
      "id": "twitter",
      "name": "Twitter/X",
      "max_chars": 280,
      "language": "zh-CN",
      "enabled": true
    },
    {
      "id": "linkedin",
      "name": "LinkedIn",
      "max_chars": 3000,
      "language": "en-US",
      "enabled": true
    },
    {
      "id": "zhihu",
      "name": "知乎",
      "max_chars": 10000,
      "language": "zh-CN",
      "enabled": true
    },
    {
      "id": "rednote",
      "name": "小红书",
      "max_chars": 1000,
      "language": "zh-CN",
      "enabled": true,
      "note": "支持图片+文字，标签用emoji"
    },
    {
      "id": "youtube",
      "name": "YouTube",
      "max_chars": 5000,
      "language": "zh-CN",
      "enabled": false,
      "note": "视频平台，需要视频生成"
    },
    {
      "id": "tiktok",
      "name": "TikTok",
      "max_chars": 2200,
      "language": "zh-CN",
      "enabled": false,
      "note": "短视频平台，需要视频生成"
    }
  ],
  "video": {
    "enabled": true,
    "default_service": "ffmpeg",
    "duration_per_image": 3.0,
    "transition": "fade",
    "resolution": "1080x1920",
    "services": {
      "runway": {
        "api_key": "",
        "model": "gen3a"
      },
      "pika": {
        "api_key": "",
        "model": "pika-1.0"
      },
      "luma": {
        "api_key": "",
        "model": "dream-machine"
      },
      "heygen": {
        "api_key": "",
        "model": "avatar"
      },
      "seedance": {
        "api_key": "",
        "model": "2.0",
        "note": "即将支持"
      }
    },
    "tts": {
      "provider": "elevenlabs",
      "voice_id": "rachel"
    }
  },
  "status_options": [
    "idea",
    "drafting",
    "reviewing",
    "scheduled",
    "published",
    "archived"
  ]
}
